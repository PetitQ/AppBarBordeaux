<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BarInfoActivity">

    <TextView
        android:id="@+id/txtinfo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageviewinfo_photo"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />

    <TextView
        android:id="@+id/txtinfo_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtinfo_name"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/txtinfo_adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtinfo_tel"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/txtinfo_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtinfo_adresse"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

    <ImageView
        android:id="@+id/imageviewinfo_photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/buttoninfoMenu"/>

    <TextView
        android:id="@+id/txtinfo_ouvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtinfo_name"
        android:text="Ouvert :"/>

    <TextView
        android:id="@+id/InfoLesCateg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtinfo_rating"
        android:text="Les catÃ©gories :"
        android:layout_marginTop="20dp"/>

    <ListView
        android:id="@+id/Lv_categ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/InfoLesCateg">

    </ListView>

    <Button
        android:id="@+id/buttoninfo_ToCarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voir sur la carte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/buttoninfoMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"/>

</android.support.constraint.ConstraintLayout>